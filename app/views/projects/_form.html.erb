<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :point_of_contact %>
    <%= f.input :phone_number %>
    <%= f.input :email %>
    <%= f.input :min_number_of_volunteers %>
    <%= f.input :max_number_of_volunteers %>
    <%= f.input :project_description %>
    <%= f.input :location %>
    <%= f.input :age_limit %>
    <%= f.input :mission_statement %>
    <%= f.input :intensity_level %>
    <%= f.input :additional_directions %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
